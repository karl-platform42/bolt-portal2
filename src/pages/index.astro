---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
import ChatBot from '../components/chat/ChatBot';

const cards = [
  {
    title: 'Technical Manual',
    description: 'Detailed technical specifications and engineering documentation.',
    href: '/technical-manual',
    icon: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>'
  },
  {
    title: 'User Manual',
    description: 'Step-by-step guides and instructions for daily operations.',
    href: '/user-manual',
    icon: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>'
  },
  {
    title: 'Downloads',
    description: 'Access to product documentation, software, and resources.',
    href: '/downloads',
    icon: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 16v1a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>'
  },
  {
    title: 'Service Instructions',
    description: 'Maintenance procedures and service documentation.',
    href: '/service-instructions',
    icon: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>'
  }
];
---

<Layout title="Industrial Documentation">
  <main>
    <Hero 
      title="Industrial Documentation Portal"
      description="Access comprehensive documentation, manuals, and service instructions for our industrial equipment."
    />
    
    <section class="cards-grid">
      {cards.map(card => (
        <Card {...card} />
      ))}
    </section>
    
    <ChatBot client:load />
  </main>
</Layout>

<style>
  main {
    padding: var(--space-xl) 0;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }
</style>