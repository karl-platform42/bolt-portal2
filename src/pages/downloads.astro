---
import ExpandableItem from '../components/ExpandableItem.astro';
import { getFolderContents } from '../utils/googleDrive';

const folderContents = await getFolderContents();
---

<html lang="en">
<head>
  <title>Downloads</title>
  <style>
    ul {
      list-style: none;
      padding-left: 20px;
    }
    .folder {
      cursor: pointer;
      font-weight: bold;
    }
    .file {
      margin-left: 20px;
    }
  </style>
</head>
<body>
  <h1>Downloads</h1>
  <div id="folder-structure">
    {folderContents.length > 0 ? (
      folderContents.map(item => (
        <ExpandableItem key={item.id} item={item} />
      ))
    ) : (
      <p>No files or folders found.</p>
    )}
  </div>
  
  

  <script>
    document.querySelectorAll('.folder').forEach(folder => {
      folder.addEventListener('click', () => {
        const sublist = folder.nextElementSibling;
        if (sublist instanceof HTMLElement) {
          sublist.style.display = sublist.style.display === 'none' ? 'block' : 'none';
        }
      });
    });
  </script>
  
</body>
</html>
